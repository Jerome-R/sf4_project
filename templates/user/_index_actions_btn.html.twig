<td class='align-middle'>
	<div class=''> 
		<a class='btn btn-primary btn-sm mb-1' href='{{ path('admin_user_show', {'id': id}) }}' title='{{'title.show'|trans}}'><i class='fas fa-eye'></i></a>
		<a class='btn btn-primary btn-sm mb-1' href='{{ path('admin_user_edit', {'id': id}) }}' title='{{'title.edit'|trans}}'><i class='fas fa-pencil-alt'></i></a>
		<form class='d-inline' method='post' action='{{ path('admin_user_delete', {'id': id}) }}'
			onsubmit='return confirm('{{'action.delete.confirm'|trans }}');'>
		    <input type='hidden' name='_method' value='DELETE'>
		    <input type='hidden' name='_token' value='{{ csrf_token('delete' ~ id) }}'>
		    <button class='btn btn-danger btn-sm mb-1' title='{{'title.delete'|trans}}'><i class='fas fa-trash-alt'></i></button>
		</form>
	</div>
</td>