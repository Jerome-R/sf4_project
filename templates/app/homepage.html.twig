{% extends 'app/index.html.twig' %}

{% block main %}
    {{ 'homepage.text'|trans }}

    {{ form_start(form, {'attr' : {'class': 'text-left hidden-print'} } ) }}
		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_widget(form.description, {'attr': {'class': 'form-control', 'contenteditable' : 'true' }}) }}
		</div>
		{{ form_widget(form.submit, {'attr': {'class': 'btn btn-action pull-right', 'style': 'margin-top:0; margin-bottom:0;'}, 'label': 'Post a comment'}) }}
		{{ form_rest(form) }}
	{{ form_end(form) }}

	{{dump(app.request)}}
{% endblock %}
